<div class="min-h-screen bg-zinc-950 p-6">
  <div class="mx-auto max-w-7xl">
    <div class="mb-6 flex items-center justify-between">
      <h1 class="text-2xl font-bold text-white">Leaderboard</h1>
      <div class="space-x-4">
        <%= link_to new_user_path, class: "inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2" do %>
          <%= icon "plus-circle", class: "h-4 w-4 mr-2" %>
          Add New User
        <% end %>
        <%= link_to new_user_path, class: "inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2" do %>
          <%= icon "plus-circle", class: "h-4 w-4 mr-2" %>
          Add Match Result
        <% end %>
      </div>
    </div>
    <div class="rounded-lg border border-zinc-800 bg-zinc-900">
      <table class="w-full">
        <thead>
          <tr class="border-b border-zinc-800 text-sm text-zinc-400">
            <th class="p-4 text-left">#</th>
            <th class="p-4 text-left">Player</th>
            <th class="p-4 text-left">Tier</th>
            <th class="p-4 text-left">Elo</th>
            <th class="p-4 text-left">Win rate</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each_with_index do |user, index| %>
            <tr class="border-b border-zinc-800 text-sm text-zinc-100 <%= 'last:border-0' if index == @users.size - 1 %>">
              <td class="p-4"><%= index + 1 %></td>
              <td class="p-4">
                <div class="flex items-center space-x-3">
                  <div class="h-8 w-8 rounded-full bg-zinc-800"></div>
                  <div>
                    <div class="font-medium"><%= user.name %></div>
                    <div class="text-xs text-zinc-400"><%= user.tag %></div>
                  </div>
                </div>
              </td>
              <td class="p-4"><%= user.tier %></td>
              <td class="p-4"><%= user.lp %>Elo</td>
              <td class="p-4">
                <div class="flex items-center space-x-3">
                  <div class="h-2 w-32 overflow-hidden rounded-full bg-zinc-800">
                    <div class="h-full bg-gradient-to-r from-blue-500 to-red-500" style="width: <%= (user.wins.to_f / (user.wins + user.losses) * 100).round %>%;"></div>
                  </div>
                  <span class="text-xs"><%= (user.wins.to_f / (user.wins + user.losses) * 100).round %>%</span>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>